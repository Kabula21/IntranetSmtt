@page "/editordatascomemorativas"
@inject IJSRuntime JS

<div id="editordatascomemorativas" class="h-40"></div>
<button class="bg-blue-500 text-white px-4 py-2 mt-2 rounded hover:bg-blue-600">Salvar</button>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("eval", @"
                var quill = new Quill('#editordatascomemorativas', {
                    theme: 'snow'
                });
            ");
        }
    }
}