{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Blazor WebAssembly Hot Reload",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "watch",
                "run"
            ],
            "cwd": "${workspaceFolder}/IntranetSmtt",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
